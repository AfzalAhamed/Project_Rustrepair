    Connection con1;
    PreparedStatement insert;
    
    public void tableupdate()
    {
        int c;
        try{
            Class.forName("com.microsoft.sqlserver.jdbc.SQLServerDriver");  // load the driver
            
           try{
            con1 = DriverManager.getConnection("");
            insert= con1.prepareStatement("select * from restoration");
            ResultSet rs=insert.executeQuery();
            ResultSetMetaData Rss=rs.getMetaData();
            c=Rss.getColumnCount();
            
            DefaultTableModel Df=(DefaultTableModel)table2.getModel();
            Df.setRowCount(0);
            
            while(rs.next())
            {
                Vector v2=new Vector();
                
                for(int i=1;i<c; i++)
                {
                    v2.add(rs.getString("vehiID"));
                    v2.add(rs.getString("vehiName"));
                    v2.add(rs.getString("vehiRegno"));
                    v2.add(rs.getString("custID"));
                    v2.add(rs.getString("status"));
                    v2.add(rs.getString("payment"));
                }
                Df.addRow(v2);
            }
            }
            catch(SQLException sqle) {
                System.out.println("Sql Exception :"+sqle.getMessage());
            }
         }
         catch(ClassNotFoundException e) {
            System.out.println("Class Not Found Exception :" + e.getMessage());
         }
    }

